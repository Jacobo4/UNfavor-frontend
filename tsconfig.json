{
  "compilerOptions": {
    "baseUrl":  "./",
    "module": "es2022",
    "moduleResolution": "Node",
    "paths": {
      "@root/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@globalStyles/*": ["src/styles/*"],
      "@globalComponents/*": ["src/components/*"],
      "@router/*": ["src/router/*"],
      "@store/*": ["src/store/*"],
      "@config/*": ["src/config/*"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ]
  },
}